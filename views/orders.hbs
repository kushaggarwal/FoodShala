<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-light color">
        <a class="navbar-brand" href="#">Navbar</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav"
            aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item active">
                    <a class="nav-link" href="#">Home <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Features</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Pricing</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link disabled" href="#">Disabled</a>
                </li>
            </ul>
        </div>
    </nav>
    <div class="container">

        <h1 style="margin-top:60px">Let's find something for your hunger</h1>

        <div style="margin-top:40px" class="card-deck">
            {{#each items as |item|}}

            <div class="card">

                <div class="card-body">
                    <h5 class="card-title">Name : {{item.name}}</h5>
                    <p class="card-text">Price : {{item.price}}</p>
                    <p class="card-text"> Restaurant : {{item.ownerUsername}}</p>
                    <a style="color:white" href="/neworder/{{item.name}}/{{item.price}}/{{item.ownerUsername}}">
                        <button class="btn btn-success">Order Now</button>
                    </a>

                </div>
            </div>


            {{/each}}
        </div>

    </div>

</body>

